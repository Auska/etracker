#!/bin/bash

clear
failed=0

chmod 777 ./
ldd build/etracker | grep "=> /" | awk '{print $3}' | xargs -I '{}' cp -v --parents '{}' ./
ldd build/etracker | grep -e "^\s*/" | awk '{print $1}' | xargs -I '{}' cp -v --parents '{}' ./

# Почему-то эта библиотека не видна через ldd, она нужна для getpwnam
cp --parents /lib/x86_64-linux-gnu/libnss_compat.so.2 ./
cp --parents /etc/passwd ./

# Показывать выбранный на компьютере часовой пояс
cp --parents /etc/localtime ./

# Для getloadavg
mkdir proc
mount -r -t proc proc proc/

# Для sysconf(_SC_NPROCESSORS_ONLN)
mkdir sys
mount -r -t sysfs sys sys/

# Для доступа к /dev/urandom
if [ -d dev/ ]; then
    mount --make-rslave dev/
    umount -R dev/
fi
mkdir dev
mount --rbind /dev dev/

while true; do
  date
  chroot ./ /etracker -p $1 -i 300 --min-interval 300 -e 300 -k --nofile 64000 --core -1 -f $failed -a 0.5
  echo Exit code: $?
  ((failed=failed+1))
  sleep 1
done

umount proc/
umount sys/
mount --make-rslave dev/
umount -R dev/
